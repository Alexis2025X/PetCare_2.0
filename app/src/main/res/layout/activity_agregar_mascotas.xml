<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:padding="20dp"
    tools:context=".agregar_citas">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_menu"
        android:gravity="center_horizontal"
        android:text="Agregar mascotas"
        android:textColor="@color/color_letras"
        android:textSize="45sp" />

    <ImageButton
        android:id="@+id/imgFotoMascotaCita"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/lblMascota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgFotoMascotaCita"
        android:layout_marginTop="34dp"
        android:text="Mascota: "
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtNombreMascota"
        android:layout_width="209dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/lblMascota"
        android:hint="Nombre de la mascota" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreMascota"

        android:layout_marginTop="8dp"
        android:text="Edad: "
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtEdad"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombreMascota"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="21dp"
        android:layout_toEndOf="@+id/textView3"
        android:hint="Edad de la macota" />

    <TextView
        android:id="@+id/lblRaza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRaza"
        android:layout_marginTop="-38dp"
        android:text="Raza: "

        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtRaza"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEdad"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="20dp"
        android:hint="Raza" />

    <TextView
        android:id="@+id/lblProblemasMedicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRaza"
        android:layout_marginTop="17dp"

        android:text="problemas: "
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtProblemasMedicos"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRaza"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="24dp"
        android:hint="Problemas medicos" />

    <TextView
        android:id="@+id/lblDueño"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRaza"
        android:layout_marginTop="80dp"

        android:text="Dueño: "
        android:textSize="25sp" />

    <EditText
        android:id="@+id/txtDueño"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtProblemasMedicos"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="22dp"
        android:hint="Dueño" />

    <Button
        android:id="@+id/btnGuardarMascota"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDueño"
        android:layout_marginTop="42dp"
        android:layout_centerHorizontal="true"
        android:text="Guardar Mascota"
        app:cardCornerRadius="150dp"
        android:backgroundTint="@color/color_btn"
        android:textColor="@color/black"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabListaCitasMascotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="92dp"
        android:backgroundTint="@color/color_menu"
        android:src="@android:drawable/ic_menu_revert" />
</RelativeLayout>