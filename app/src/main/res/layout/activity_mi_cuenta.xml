<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_fondo"
    android:padding="20dp"
    tools:context=".mi_cuenta">


    <androidx.cardview.widget.CardView
        android:id="@+id/CvCitas"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFB222"
        app:cardCornerRadius="80dp">

        <TextView
            android:id="@+id/lblMiCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_menu"
            android:gravity="center_horizontal"
            android:text="Mi Cuenta"
            android:textColor="@color/color_letras"
            android:textSize="50dp" />
        <TextView
            android:id="@+id/lblUsuario"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="140dp"
            android:text="Usuario: "
            android:textSize="30sp" />



        <EditText
            android:id="@+id/txtUsuario"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="140dp"
            android:layout_marginStart="130dp"
            android:hint="my_user" />

        <TextView
            android:id="@+id/lblNombreUsuario"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="200dp"
            android:text="Nombre: "
            android:textSize="30sp" />



        <EditText
            android:id="@+id/txtNombreUsuario"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:layout_marginStart="130dp"
            android:hint="Mario" />


        <TextView
            android:id="@+id/lblClinica"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="250dp"
            android:text="ContraseÃ±a: "
            android:textSize="30sp" />


        <EditText
            android:id="@+id/txtNombreClinica"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="250dp"
            android:hint="********" />

        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="300dp"
            android:text="Email: "
            android:textSize="30sp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:layout_marginStart="130dp"
            android:layout_marginBottom="30dp"
            android:hint="mar@gmail.com" />



    </androidx.cardview.widget.CardView>



</RelativeLayout>